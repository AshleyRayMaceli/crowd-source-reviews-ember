<form class="new-rating-form">
  <h2>Add a Rating:</h2>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-5">
        <h5>Username:</h5>
      </div>
      <div class="col-xs-7">
        {{input value=username id="username"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-5">
        <h5>Rating:</h5>
      </div>
      <div class="col-xs-7">
        <div class="row">
        <span class="star-rating-selection" {{action "rateOneStar"}} id="rateOneStar">
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
        </span>
      </div>

      <div class="row">
        <span class="star-rating-selection" {{action "rateTwoStar"}} id="rateTwoStar">
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
        </span>
      </div>

      <div class="row">
        <span class="star-rating-selection" {{action "rateThreeStar"}} id="rateThreeStar">
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
        </span>
      </div>

      <div class="row">
        <span class="star-rating-selection" {{action "rateFourStar"}} id="rateFourStar">
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star-empty"></b>
        </span>
      </div>

      <div class="row">
        <span class="star-rating-selection" {{action "rateFiveStar"}} id="rateFiveStar">
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
          <b class="glyphicon glyphicon-star"></b>
        </span>
      </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-5">
        <h5>Comment:</h5>
      </div>
      <div class="col-xs-7">
        {{textarea class="materialize-textarea" value=comment id="comment"}}
      </div>
    </div>
  </div>

  <button class="waves-effect waves-light btn" {{action 'saveRating'}}>Add Rating</button>
</form>
