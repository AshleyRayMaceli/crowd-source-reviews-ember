<form>
  <h2>Add a Rating:</h2>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Username:</h5>
      </div>
      <div class="col-xs-8">
        {{input value=username id="username"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Rating:</h5>
      </div>
      <div class="col-xs-8">
        {{input type="number" value=stars id="stars"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Comment:</h5>
      </div>
      <div class="col-xs-8">
        {{textarea class="materialize-textarea" value=comment id="comment"}}
      </div>
    </div>
  </div>

  <button class="waves-effect waves-light btn" {{action 'saveRating'}}>Add Rating</button>
</form>
